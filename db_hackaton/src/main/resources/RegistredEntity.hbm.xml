<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="ru.atom.dbhackaton.hibernate.RegistredEntity" table="registred" schema="chat" catalog="chatdb_atom1">
        <id name="userId">
            <column name="userId" sql-type="serial"/>
            <generator class="identity"/>
        </id>
        <property name="login">
            <column name="login" sql-type="varchar(100)" length="100" unique="true"/>
        </property>
        <one-to-one name="token" class="ru.atom.dbhackaton.hibernate.LoginEntity" constrained="true"/>
        <property name="password">
            <column name="password" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="regdate">
            <column name="regdate" sql-type="timestamp" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>