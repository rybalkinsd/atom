<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="ru.atom.dbhackaton.hibernate.LoginEntity" table="login" schema="chat" catalog="chatdb_atom1">
        <id name="id">
            <column name="userId" sql-type="int4" unique="true"/>
        </id>
        <property name="token">
            <column name="token" sql-type="varchar(100)" length="100" unique="true"/>
        </property>
        <one-to-one name="user" class="ru.atom.dbhackaton.hibernate.RegistredEntity" cascade="save-update"/>
    </class>
</hibernate-mapping>